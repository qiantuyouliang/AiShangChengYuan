/* miniprogram/pages/Messages/Messages.wxss */
.Navtxt{
  text-align: center;
  padding-top:20rpx;
}

.Container {
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #ddd ;
}
.MessageLists{
  box-sizing: border-box;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;

}
.MessageLists-Left{
  width: 100rpx;
  height: 100rpx;
  padding: 15rpx 10rpx 10rpx 20rpx;
  border-radius: 10rpx;  
}

.MessageLists-Right{
  box-sizing: border-box;
  padding:5rpx 10rpx 5rpx 10rpx ;
  display: flex;
  flex: 1;
  flex-direction: column;
  border-bottom: 1px solid #ddd ;

}
.MessageLists-Right-Header{
  display: flex;
  flex-direction:row;
  justify-content: space-between;
 
}
.MessageLists-Right-Header .MessageLastTime{
  font-size: 28rpx;
  color: #656565;
}
.MessageLists-Right-Header .MessageOneNickname{
  font-size: 34rpx;
  font-weight: 500;
  
}
.MessageLists-Right-Content{
  font-size: 30rpx;
  color: #656565;
  
}