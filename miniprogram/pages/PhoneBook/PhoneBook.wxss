/* pages/PhoneBook/PhoneBook.wxss */
.container{
  width: 100%;
  display: flex;
  
}
.Header{
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: dashed black 2rpx;
}
.Header text{
  font-size:52rpx ;
  font-weight:600 ;
}

.PhoneListContainer{
  width: 100%;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.PhoneTab{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.PhoneList{
  padding: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

}
.PhoneList .Name{
  width: 40%;
  font-size: 42rpx;
  display: flex;

}
.Name text{
  flex: 1;
  text-align: right;
}
.PhoneTab .PhoneNub{
  width: 30%;
  font-size: 42rpx;
  flex: 1;
}
.PhoneTab .MakeCall{
  width: 20%;
  display: flex;
  justify-content: right;
}
.MakeCall image{
  margin-top: 4rpx;
  width: 52rpx;
  height: 52rpx;
  float: right;
}
.PhoneBookComment{
  width: 100%;
  background-color:red;
}