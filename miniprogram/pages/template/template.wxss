/* miniprogram/pages/template/template.wxss */

/**** templates Tabbar.wxss ****/
.tabBar{
  width:756rpx;
  position: fixed;
  bottom:0;
  height: 92rpx;
  margin-left:-4rpx;
  background:rgb(255, 255, 255);
  font-size:20rpx;
  color:#8A8A8A;
  display: flex;
  justify-content: space-evenly;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}

 .tabBar-item{
   margin-top: 6rpx;
  width:25%;
  text-align: center;
}

.TabbarIcon{
  width: 54rpx;
  height: 54rpx;
}
/*当前字体颜色*/
.tabBartext{
  color:#8A8A8A;
}


/***** template ForumsListBoard.wxss ****/
.ForumBoard{
  box-sizing: border-box;
  padding:10rpx 20rpx 10rpx 20rpx ;
}
.ForumsList{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: white;
  border-radius: 30rpx;
}
.ForumContent {
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 10rpx 0rpx 20rpx;
}
.ForumContent .ImgContent{
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.ImgContent .ImageList{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}
.ImageList image{
  
  padding:10rpx ;
  height:200rpx;
  width: 200rpx;
}
.ImgTxtContent{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.TitleGroup{
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.TitleGroup .ForumTitle{
  box-sizing: border-box;
  padding:0rpx 20rpx 0rpx 0rpx;
  font-size: 36rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.Price{
  display: flex;
  box-sizing: border-box;
  padding: 0rpx 15rpx 0rpx 15rpx;
  border-radius: 30rpx;
  height: 40rpx;
  background-color:#e4e4e4 ;
  text-align: center;
  justify-content: center;
}
.Price text{
  color: #1296db;
  font-size: 32rpx;
  font-weight: 500;
}

.TxtContent-Txt{
  box-sizing: border-box;
  height: 150rpx;
  padding:10rpx;
  font-size:22rpx ;
  color: #656565;
  overflow: hidden; 
text-overflow: ellipsis; 
display: -webkit-box;  
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}

.ImgTxtContent image{
  box-sizing: border-box;
  padding:5rpx 20rpx 0rpx 0rpx ;
  height:200rpx;
  width: 220rpx;
}
.ForumRelative{
  padding: 10rpx 30rpx 10rpx 30rpx;
  display: flex;
  justify-content: space-between;

}
.CreatorInfo{
  display: flex;
  align-items: center;
}
.CreatorInfo image{
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.CreatorInfo text{
  padding-left: 10rpx;
  font-size: 20rpx;
  color: #656565;
}
.ViewsNub{
  display: flex;
  align-items: center;
  
}
.ViewsNub image{
  width: 30rpx;
  height: 30rpx;
}
.ViewsNub text{
  font-size: 20rpx;
  color: #656565;
}
.CommentsNub{
  display: flex;
  align-items: center;
  margin-right: 30rpx ;
}
.CommentsNub image{
  width: 30rpx;
  height: 30rpx;
}
.CommentsNub text{
  font-size: 20rpx;
  color: #656565;
}
.write-Forum-btn{
  position: fixed;
  right:330rpx;
  bottom: 90rpx;
  width: 100rpx;
  height: 100rpx;
  background-color:#1296db;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 5px rgb(0, 0, 12,10);
}

.write-Forum-btn image{
  width: 60rpx;
  height: 60rpx;
}
/****PhoneBook ****/
.Header{
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: dashed black 2rpx;
}
.Header text{
  font-size:52rpx ;
  font-weight:600 ;
}

.PhoneListContainer{
  box-sizing: border-box;
  width: 100%;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.PhoneTab{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.PhoneList{
  padding: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

}
.PhoneList .Name{
  width: 40%;
  font-size: 42rpx;
  display: flex;

}
.Name text{
  flex: 1;
  text-align: right;
}
.PhoneTab .PhoneNub{
  width: 30%;
  font-size: 42rpx;
  flex: 1;
}
.PhoneTab .MakeCall{
  width: 20%;
  display: flex;
  justify-content: right;
}
.MakeCall image{
  margin-top: 4rpx;
  width: 52rpx;
  height: 52rpx;
  float: right;
}
.PhoneBookComment{
  width: 100%;
  background-color:red;
}
